{
  "$schema": "https://tauri.app/schemas/config/1",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5173",
    "distDir": "../dist"
  },
  "package": {
    "productName": "Nanobot",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "sidecar": true,
        "scope": [
          {
            "name": "nanobot-sidecar",
            "sidecar": true,
            "args": ["gateway", "--api"]
          }
        ]
      },
      "http": {
        "all": false,
        "request": true,
        "scope": ["http://localhost:8000/**"]
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.nanobot.app",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "resources": [],
      "externalBin": ["binaries/nanobot-sidecar"],
      "copyright": "",
      "category": "DeveloperTool",
      "shortDescription": "",
      "longDescription": ""
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "Nanobot 控制台",
        "width": 1280,
        "height": 800
      }
    ]
  }
}
